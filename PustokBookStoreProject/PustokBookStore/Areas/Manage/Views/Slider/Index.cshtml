@model List<Slider>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <a asp-action="create"><button type="button" class="btn btn-success">Create</button></a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title 1
                                </th>
                                <th>
                                    Title 2
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img src="~/uploads/slider/@item.Image" alt="">
                                    </td>
                                    <td>
                                        @item.Title1
                                    </td>
                                    <td>
                                        @item.Title2
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-warning btn-rounded btn-fw">
                                                <i class="mdi mdi-pencil"></i>
                                            </button>
                                        </a>
                                        <a asp-action="delete" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-danger btn-rounded btn-fw">
                                                <i class="mdi mdi-delete"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>